/* Tree node structure  used in the program
 struct Node
 {
     int data;
     Node* left, *right;
}; */

class Solution{
  public:
    /*You are required to complete below method */
    int maxLevelSum(Node* root) {
        
        // Your code here
        queue<Node *> q;
        
        q.push(root);
        int tillMax = INT_MIN;
        while(!q.empty()) {
            int n = q.size();
            int current = 0;
            for(int i = 0; i <n; i++) {
                Node *cur = q.front();
                q.pop();
                current += cur->data;
                if(cur->left) q.push(cur->left);
                if(cur->right) q.push(cur->right);
            }
            
            tillMax = max(tillMax, current);
        }
        
        return tillMax;
    }
};
