class Solution {
public:	
	// Converts arr[0..n-1] to reduced form.
	void convert(int arr[], int n) {
	    
	    unordered_map <int,int> mp;
	    
	    vector <int> temp;
	    
	    for (int i = 0; i < n; i++) {
	        temp.push_back(arr[i]);
	    }
	    
	    sort(arr,arr+n);
	    
	    for (int i = 0; i < n; i++) {
	        mp[arr[i]] = i;
	    }
	    
	    for (int i = 0; i < temp.size(); i++) {
	        arr[i] = mp[temp[i]];
	    }
	    
	}
